@using QuickDictionary.Web.Models
@model List<DictionaryViewModel>

@{
    ViewData["Title"] = "My dictionaries";
}

<div class="col-md-12">
    <div class="blue-wrapper">
        <div class="header-wrapper">
            <h1>
                My dictionaries
            </h1>
        </div>

        <div class="custom-table-wrapper">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Source language</th>
                        <th>Target language</th>
                        <th>Created at</th>
                        <th>Updated at</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="checkbox-cell">
                                <input type="checkbox" name="dictionaries" value="@item.Id">
                            </td>
                            <td>
                                <a href="/Translation/Index/@item.Id">@item.Name</a>
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                @item.SourceLanguage
                            </td>
                            <td>
                                @item.TargetLanguage
                            </td>
                            <td>
                                @item.CreatedAt
                            </td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('table').dataTable({
            "paging": false,
        });
    </script>
}